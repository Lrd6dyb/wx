/* pages/recommendlist/recommendlist.wxss */
.page{
  background-color: #fff;
}
.shop{
  padding: 20rpx;
  border-bottom:1px solid #ddd; 
  display: flex;
  position: relative;
}
.shop-img{
  width: 160rpx;
  height: 185rpx;
  margin-top:30rpx;
  margin-right:20rpx;
}
.shop-info{
  width: 520rpx;
  font-size: 12px;
  color:#666;
  display: flex;
  flex-direction: column;
  line-height: 1.5;
}
.shop-title{
  font-size:16px;
  color: #333;
  width: 380rpx; 
}
.shop-star{
  position: absolute;
  right: 20rpx;
  top:20rpx;
}
.star-after{/*黑星 */
  color: #e2e2e2;
}
.star-before{/*黄星 */
  color:#f19e38;
  position: absolute;
  left: 0;
  top:0;
  /*width: ;分数*/
  overflow: hidden;   
}

