/* pages/discount/discount.wxss */
.page{
  background-color: #fff;
}
.discount{
  padding: 20rpx;
  border-bottom:1px solid #ddd; 
  display: flex;
  position: relative;
}
.discount-img{
  width: 160rpx;
  height: 180rpx;
  margin-right:20rpx;
}
.discount-info{
  width: 520rpx;
  font-size: 12px;
  color:#666;
  display: flex;
  flex-direction: column;
  line-height: 1.5;
}
.discount-name{
  font-size:16px;
  color: #333;
  width: 380rpx; 
}
.discount-new{
  color:red;
  font-weight:bold;
  font-size:16px;
}
.discount-old{
  font-size:12px;
  text-decoration:line-through;
}
.discount-star{
  position: absolute;
  right: 20rpx;
  top:20rpx;
}
.star-after{/*黑星 */
  color: #e2e2e2;
}
.star-before{/*黄星 */
  color:#f19e38;
  position: absolute;
  left: 0;
  top:0;
  /*width: ;分数*/
  overflow: hidden;   
}
