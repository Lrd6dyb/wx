/**index.wxss**/
page{
  background: #ddd;
}
/**top avatar*/
.car{
  background-color:#FEAF45;
  height:400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.car image{
  width:200rpx;
  height:200rpx;
  border:1rpx solid #ff6600;
  border-radius: 50%;
}
.uname{
  text-align: center;
  font-weight: bold;
  font-size: 30rpx;  
}
.uname1{
  display: none;
}
.login{
  display: flex;
  justify-content: center;
  font-weight: bold;
  font-size:30rpx;
}
/*卡片*/
.line{
  margin:10rpx 0; 
  border-bottom:1rpx solid #ff6600; 
}
.card{
  background: #fff;
  margin: 20rpx 30rpx;
  padding: 50rpx 30rpx;
  border-radius: 20rpx;
  display:flex;
  justify-content:space-between;
  align-items: center;
}
.card-item{
  width:25%;
  text-align: center;
}
.card-line{
  color:#ddd;
}
.order{
  background: #fff;
  margin: 20rpx 30rpx;
  padding: 50rpx 30rpx;
  border-radius: 20rpx;
}
.orde{
  display: flex;
  justify-content:space-between;
}
.orde-item{
  font-size: 20rpx;
  color:#868686;
}
.pages{
  font-size: 30rpx;
  color: #562B00;
}
.word{
  font-size: 25rpx;
  overflow: hidden;
}
/*订单**/
.pay{
   width:600rpx;
   font-size: 25rpx;
   text-align: center;
   margin-top: 30rpx;
   padding-left:10rpx; 
   display: flex;
   justify-content: space-between;  
   flex-wrap: wrap;
}
.pay-item image{
   width:70rpx;
   height:70rpx;
}
/**会员专享价*/
.ell{
  overflow: hidden;/**超出范围*/
  white-space: nowrap;/*不允许换行*/
  text-overflow: ellipsis;/*超出部分添加。。。*/
}
.order-item{
  color: #AC3800;
}
.order-product{
  border: 2rpx solid #ddd;
  border-radius: 20rpx;
  margin: 10rpx 10rpx;
}
.order-product image{
  width:250rpx;
  height:250rpx;
}
.order-word{
  width: 100px;
  font-size: 30rpx;
  margin: 0  auto;
}
.order-cart{
  padding:10rpx 20rpx; 
  display: flex;
  justify-content: space-between;
}
.order-new{
  font-size: 25rpx;
  color:#FEAF45; 
  margin-right:2rpx; 
}
.order-old{
  font-size: 25rpx;
  color:#D4217B; 
}
.order-cart image{
  width:30rpx;
  height:30rpx;
}