page{
	font-size: 14px;
	position: relative;  
}
.slider-y{
	background-color: #F8F8F8;
	position: absolute;
}
.slider-y-item{
	height: 50px;
	line-height: 50px;
	text-align: center;
}
.slider-y-item .handle{
	height: 30px;
	line-height: 30px;
	margin:10px 0px;
	border-left: 4px solid #D4217B;
}
.content-right{
	width: 285px;
	position: absolute;
	top:26px;
	left:90px; 
}
.slider-x-father{
	width: 285px;
	position: relative;
}
.slider-x{
	height: 35px;
	line-height: 35px;
	font-size: 12px;
	white-space: nowrap; 
}
.slider-x-item{
	padding:0 18px;
	display: inline-block; 
}
.slider-x-item:last-child{
	padding-right: 50px;	
}
.product{
	height: 90px;
	border-bottom: 1px solid #F6F6F6;	
	border-top: 1px solid #F6F6F6;	
	padding: 10px 20px;
	display: flex;
	align-items: center;
}
.product>image{
	width: 160rpx;
	height: 160rpx;
	padding-right: 10px;
}
.product .product-info{
	width:300rpx;
	display: flex;
	flex-direction: column;
}
.product .product-info .title{
  width:100%;
  height: 30px;
}
.product .product-info .price-cart{
	display: flex;
	justify-content: space-between;
	padding-top:15px;
	align-items: center;
}
.product .product-info .price-cart .price{
  text-decoration: line-through;
  color:gray;
  font-size:13px;
}
.product .product-info .price-cart .vprice{
  font-size: 16px;
  color:#d4237a;
}
.product .product-info image{
	width:50rpx;
	height: 50rpx;
	padding-right: 3px;
}
.ell{  
	overflow: hidden; /*超出部分隐藏*/
	white-space: nowrap;  /*不允许隐藏*/
	text-overflow: ellipsis;  /*显示...*/
}
.content-bottom{
	height: 494px;
}
.slider-x-father .drop-list{
	width: 80rpx;
	height: 35rpx;
	position: fixed;
	top:36px;
	right:0px;
	background: #fff;
	display: flex;
	justify-content: center;
	align-items: center;
	box-shadow: -12px 0 10px #f9f9f9;
	z-index: 100;
}
.drop-list::after{
	content:"";
	width: 20rpx;
	height: 20rpx;
	border-top:3rpx solid #ccc;
	border-right: 3rpx solid #ccc;
	transform: rotate(135deg);
}
.drop-list-item{
 	opacity: 0; 
	position: fixed;
	top:25px;
	left:90px;
	display: flex;
	flex-wrap: wrap;
	z-index: -10;
	background: #fff;
	width: 285px;
	margin-top:10px;
}
.drop-list-item-show{
	opacity: 1;
	z-index: 10;
}
.drop-list-item view{
	width: 60px;  
	text-align: center;
	border: 1px solid #dcdcdc;
	border-radius: 10px;
	padding:5px; 
	margin: 5px 3px;
} 
.location-search{
	position: relative;
	display: flex;
	justify-content: space-between;
	height: 30px;
}
.location image{
	width:170rpx;
	height: 40rpx;
}
.location .city{
	display: inline-block;
	font-size: 16px;
	position: relative;
	top:-2px;
	padding-left: 15px;
}
.search{
	border: 1px solid #dcdcdc;
	border-radius: 18px;
	padding-left: 15px;
	position: relative; 
	right:8px;
}
.search image{
	width:50rpx;
	height: 50rpx;
	position: absolute;
	top:2px;
	right: 15px;
	z-index:5;
}
.search input{
	z-index: 2;
}
